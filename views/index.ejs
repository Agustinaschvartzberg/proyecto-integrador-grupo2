<!DOCTYPE html>
<html lang="es">
	<%- include('partials/head') %>

		<body>
			<% if(usuario !=undefined) { %>
				<%- include('./partials/headerLogueado.ejs') %>
			<% } else { %>
				<%- include('./partials/header.ejs') %>
			<% } %>
			<div class="banner">
				<img src="/images/banner.png" alt="Banner de ofertas">
			</div>
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Novedades</h2>
					</div>
					<% for (let i=0; i < (lista.length > 4 ? 4: lista.length); i++) { %>
						<div class="col-12 col-sm-6 col-lg-3" id="productos">
							<section class="product-box">
								<a href="/product">
									<figure class="product-box_image">
										<a href="/productos/detalle/id/<%=lista[i].id%>">

											<img src="/images/products/<%= lista[i].photo %>"
												height="40px" alt="<%= lista[i].producto %>">
										</a>

									</figure>
									<article class="product-box_data">
										<h2>
											<a href="/productos/detalle/id/<%=lista[i].id%>">

												<%= lista[i].producto %>
											</a>
										</h2>

										<p>
											<%= lista[i].descripcion %>
										</p>
										<h5>
											<a href="/profile/<%=lista[i].usuario.username%>">
												<%= lista[i].usuario.username %>
											</a>
										</h5>
									</article>
								</a>
							</section>
						</div>
					<%} %>
				</div> 
				</div> 
				<%- include('partials/footer') %>
		</body>