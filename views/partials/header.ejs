<header class="main-header">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-5 col-md-2">
        <a href="/" class="main-header_home-link">
          <img src="/images/logo.png" />
        </a>
      </div>
      <div class="col-7 col-md-6">
        <form
          class="search-form"
          method="post"
          action="/product/search-results"
        >
          <input
            type="text"
            name="search"
            placeholder="Buscar productos, marcas y más"
            class="search-form_input"
            required
            minlength="4"
          />
          <button type="submit" class="search-form_button">
            <i class="fas fa-search"></i>
          </button>
        </form>
      </div>
      <div class="col-12 col-md-4">
        <a class="main-header_credit-link">
          <i class="fas fa-hand-holding-usd"></i>
          Todas las opiniones en un solo lugar.
        </a>
      </div>
    </div>
    <button class="btn-toggle-navbar">
      <i class="fas fa-bars"></i>
    </button>
    <nav class="main-navbar">
      <ul class="left-navbar">
        <li><a href="/">Todos los productos</a></li>
      </ul>
      <% if (Usuario) { %>
      <ul class="right-navbar">
        <li>
          <a href="/profile">
            <i class="fas fa-user"></i>
            <%= Usuario.Usuario %>
          </a>
        </li>
        <li>
          <a href="/logout">
            <i class="fas fa-sign-out-alt"></i>
            Cerrar sesión
          </a>
        </li>
      </ul>
      <% } else { %>
      <ul class="right-navbar">
        <li>
          <a href="/login">
            <i class="fas fa-sign-in-alt"></i>
            Iniciar sesión
          </a>
        </li>
        <li>
          <a href="/register">
            <i class="fas fa-user-plus"></i>
            Registrarse
          </a>
        </li>
      </ul>
      <% } %>
    </nav>
  </div>
</header>
